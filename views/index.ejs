<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create your task</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-600">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 py-2 w-full" type="text" placeholder="Title goes here" name="title">
                <textarea class="block px-5 py-22 mt-2 w-full" placeholder="Write your task details" name="details"></textarea>
                <input class="mt-2 bg-orange-300 px-5 py-2 rounded-md" type="submit" value="Create task">
            </form>
        </div>

        <div class="tasks flex gap-3 flex-wrap p-10">


            <% if(files.length > 0) { %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-700">
                        <h1 class="text-white"><%= val %></h1>
                        <a class="text-blue-300" href="/file/<%= val %>">Read more</a>                
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="font-medium">No task yet</h3>
            <% } %>

            
            
            
        </div>
        
    </div>
    
    
</body>
</html>